<h1>Searching for - <%= @search_term %></h1>

<% if @recipes.nil? %>

<p>There are no recipes for that search term.</p>

<% else %>

<table border="1">
  <tr>
    <th>Recipe Image</th>
    <th>Recipe Title</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
  <tr class=<%= cycle('even', 'odd') %>>
    <td><%= link_to(image_tag(recipe["image_url"], size: "100"), recipe["f2f_url"])%></td>
    <td><%= link_to(recipe["title"], recipe["f2f_url"])%></td>
    <td><%= recipe["social_rank"]%></td>
  </tr>
  <% end %>
</table>

<% end %>
